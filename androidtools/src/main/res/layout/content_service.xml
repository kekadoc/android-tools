<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView android:id="@+id/textView_title"
        style="@style/TextAppearance.OnSurface.Title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="@style/TextAppearance.OnSurface.Title"
        android:textAlignment="center"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:singleLine="true"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:clickable="true"
        android:focusable="true"/>

    <com.google.android.material.textview.MaterialTextView android:id="@+id/textView_description"
        style="@style/TextAppearance.OnSurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="6"
        android:textAppearance="@style/TextAppearance.OnSurface"
        android:textAlignment="center"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:visibility="gone"/>


    <FrameLayout android:id="@+id/frameLayout_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout android:id="@+id/frameLayout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <FrameLayout android:id="@+id/frameLayout_shutter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

    </FrameLayout>


</LinearLayout>